<div class="container school-list-style">
  <% @projects.each do |project| %>

    <h2>Project Name: <%= project.name %></h2>
    <h4>Details: <%= project.details %></h4>
    <a data-toggle="modal" href="#donation-modal-<%= project.id %>" class="btn-block"><i class="fa fa-eye" aria-hidden="true"></i>Donation</a>

    <!-- PRODUCT QUICK VIEW MODAL -->
